<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>Edit Listing</h1>
            <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Enter Title : </label>
                    <input type="text" name="listing[title]" id="title" value="<%=listing.title%>" class="form-control" required>
                    <div class="valid-feedback">Valid</div>
                    <div class="invalid-feedback">Invalid</div>
                </div>
                <div class="mb-3">
                    <label for="desc" class="form-label">Enter Description : </label>
                    <textarea name="listing[description]" class="form-control" id="desc" required><%=listing.description%></textarea>
                    <div class="valid-feedback">Valid</div>
                    <div class="invalid-feedback">Invalid</div>
                </div>

                <div class="mb-3">
                    <b>Original Listing Image</b>
                    <img src="<%=orgImgUrl%>" alt="">
                </div>

                <div class="mb-3">
                    <label for="img" class="form-label">Upload New Image : </label>
                    <input type="file" name="listing[image]" class="form-control" id="img" >
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label" >Enter Price : </label>
                    <input  class="form-control" name="listing[price]" id="price" value="<%=listing.price%>" required>
                    <div class="valid-feedback">Valid</div>
                    <div class="invalid-feedback">Invalid</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="loc" class="form-label ">Enter Location : </label>
                        <input type="text" name="listing[location]" class="form-control" id="loc" value="<%=listing.location%>" required>
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Invalid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Enter Country : </label>
                        <input type="text" name="listing[country]" class="form-control" id="country" value="<%=listing.country%>" required>
                        <div class="valid-feedback">Valid</div>
                        <div class="invalid-feedback">Invalid</div>
                    </div>
                </div>
                <button class="btn btn-outline-danger edit-btn">Edit</button>
                <br>
                <br>
                <br>
            </form>
            <br>
        </div>
    </div>
</body>